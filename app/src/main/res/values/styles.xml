<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="table_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">25dp</item>
        <item name="android:background">@drawable/table_button</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>


    <style name="radiobutton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">30dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/hi_white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/radiobuttonbg</item>
    </style>

    <style name="main_button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textColor">@color/hi_white</item>
        <item name="android:background">@color/pink</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>


</resources>
