<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/p_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/pink"
        android:elevation="10dp">

        <ToggleButton
            android:id="@+id/p_toogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a" />
    </android.support.v7.widget.Toolbar>


    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/p_toolbar"
        android:orientation="horizontal">

        <!--    android:background="@drawable/radiobuttonbg"
         style="@style/RadioButtonStyle"-->

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rb_1" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rb_2" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rb_3" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rb_4" />
    </RadioGroup>

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rg" />




</RelativeLayout>